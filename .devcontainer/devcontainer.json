{
  "name": "pychd",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "postStartCommand": "uv sync --all-groups",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "charliermarsh.ruff"
      ],
      "settings": {
        "python.pythonPath": ".venv/bin/python",
        "python.defaultInterpreterPath": ".venv/bin/python"
      }
    }
  }
}
